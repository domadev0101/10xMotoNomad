<MudPaper Elevation="0" Class="pa-8 text-center empty-state-container" Style="background: transparent;">
    <div class="empty-state-icon" style="animation: bounce 2s infinite;">
        <MudIcon 
            Icon="@IconName" 
   Style="font-size: 80px; color: #667eea; opacity: 0.6;" />
 </div>
    
    <MudText Typo="Typo.h4" Class="mb-2" Style="font-weight: 600; color: #2D3748;">
        @Title
    </MudText>
    
    <MudText Typo="Typo.body1" Color="Color.Secondary" Class="mb-4" Style="max-width: 400px; margin: 0 auto;">
        @Message
    </MudText>
    
    @if (!string.IsNullOrEmpty(ButtonText))
    {
    <MudButton 
            Variant="Variant.Filled" 
            Class="empty-state-button"
  Style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 12px; padding: 12px 32px; text-transform: none; font-weight: 600;"
   OnClick="@OnButtonClick">
  @ButtonText
      </MudButton>
    }
</MudPaper>

<style>
    /* Fade-in animation for entire component */
    .empty-state-container {
        animation: fadeIn 0.5s ease-in;
    }

    /* Bounce animation for icon */
    @@keyframes bounce {
   0%, 100% { 
   transform: translateY(0); 
   }
 50% { 
      transform: translateY(-10px); 
        }
    }

    /* Fade-in animation */
    @@keyframes fadeIn {
        from {
   opacity: 0;
         transform: translateY(20px);
        }
        to {
     opacity: 1;
      transform: translateY(0);
    }
 }

    /* Button hover effect */
    .empty-state-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 16px rgba(102, 126, 234, 0.3) !important;
    }
</style>
