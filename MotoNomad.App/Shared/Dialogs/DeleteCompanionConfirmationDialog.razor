@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.body1">
            Are you sure you want to remove <strong>@FirstName @LastName</strong> from the trip?
      </MudText>
    </DialogContent>
    
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Text" Color="Color.Default">
  Cancel
        </MudButton>
        
        <MudButton OnClick="Confirm" Variant="Variant.Filled" Color="Color.Error">
        Delete
        </MudButton>
    </DialogActions>
</MudDialog>
