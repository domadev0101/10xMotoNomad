    .cta-bottom-section {
        padding: 80px 20px;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
        text-align: center;
    }

    .cta-content { max-width: 800px; margin: 0 auto; }
    .cta-title { font-size: 36px; font-weight: 700; color: #2D3748; margin-bottom: 16px; }
