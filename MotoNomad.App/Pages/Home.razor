@page "/"
@using MotoNomad.Application.Interfaces
@using MotoNomad.App.Shared.Components
@using MudBlazor

<PageTitle>MotoNomad - Plan Your Next Adventure</PageTitle>

<AuthorizeView>
    <Authorized>
  @* Dashboard for Logged-in Users *@
  <div class="dashboard-container">
         @* Welcome Banner *@
     <section class="welcome-banner">
<div class="welcome-content">
   <h1 class="welcome-title">Welcome back, @GetUserDisplayName(context)! 👋</h1>
  <p class="welcome-subtitle">Ready to plan your next adventure?</p>
     </div>
          </section>

   @* Quick Actions *@
  <section class="quick-actions-section">
                <div class="quick-actions-grid">
       <MudButton 
        Variant="Variant.Filled" 
                    Size="Size.Large"
           StartIcon="@Icons.Material.Filled.Add"
Style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; font-weight: 600; border-radius: 12px; padding: 20px 32px; text-transform: none; box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);"
             Href="/trip/create">
 Create New Trip
                  </MudButton>
        
         <MudButton 
  Variant="Variant.Filled" 
         Size="Size.Large"
  StartIcon="@Icons.Material.Filled.Map"
         Style="background: white; color: #667eea; font-weight: 600; border-radius: 12px; padding: 20px 32px; text-transform: none; box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);"
    Href="/trips">
      View All Trips
         </MudButton>
    </div>
        </section>

       @* Stats Cards *@
         <section class="stats-section">
              <div class="stats-grid">
 <div class="stat-card">
    <div class="stat-icon">🗓️</div>
       <div class="stat-value">@upcomingTripsCount</div>
  <div class="stat-label">Upcoming Trips</div>
           </div>
           
    <div class="stat-card">
              <div class="stat-icon">🗺️</div>
              <div class="stat-value">@totalTripsCount</div>
           <div class="stat-label">Total Trips</div>
        </div>
     
            <div class="stat-card">
                <div class="stat-icon">👥</div>
        <div class="stat-value">@totalCompanionsCount</div>
 <div class="stat-label">Travel Companions</div>
       </div>
            </div>
      </section>

         @* Recent Activity *@
         <section class="recent-activity-section">
             <h2 class="section-title">Your Recent Trips</h2>
           
    @if (isLoading)
        {
    <div style="text-align: center; padding: 40px;">
           <MudProgressCircular Indeterminate="true" Size="Size.Large" Color="Color.Primary" />
    </div>
        }
     else if (recentTrips.Count == 0)
 {
        <EmptyState 
      Title="No trips yet"
  Message="Start planning your first adventure!"
     IconName="@Icons.Material.Filled.Map"
       ButtonText="Create First Trip"
         OnButtonClick="@HandleCreateFirstTrip" />
     }
      else
                {
        <div class="recent-trips-grid">
  @foreach (var trip in recentTrips.Take(3))
{
               <TripListItem Trip="@trip" OnTripClick="@HandleTripClick" />
             }
     </div>
      
     @if (recentTrips.Count > 3)
         {
       <div style="text-align: center; margin-top: 24px;">
               <MudButton 
        Variant="Variant.Text" 
              Color="Color.Primary"
  EndIcon="@Icons.Material.Filled.ArrowForward"
       Href="/trips">
                 View All Trips
           </MudButton>
            </div>
 }
       }
 </section>
        </div>
    </Authorized>
    
    <NotAuthorized>
        @* Marketing Page for Non-logged Users *@
 <div class="home-container">
         @* Hero Section *@
            <section class="hero-section">
    <div class="hero-content">
          <div class="hero-icon">🏍️</div>
     <h1 class="hero-title">Plan Your Next Adventure</h1>
          <p class="hero-subtitle">
          Organize motorcycle trips, track companions, and create unforgettable memories with MotoNomad
        </p>
     
 <div class="hero-buttons">
             <MudButton 
           Variant="Variant.Filled" 
       Size="Size.Large"
     Style="background: white; color: #667eea; font-weight: 600; border-radius: 12px; padding: 16px 40px; text-transform: none;"
         Href="/register">
 Get Started - It's Free
 </MudButton>
      
   <MudButton 
  Variant="Variant.Outlined" 
     Size="Size.Large"
           Style="border-color: white; color: white; font-weight: 600; border-radius: 12px; padding: 16px 40px; text-transform: none;"
     Href="/login">
     Sign In
  </MudButton>
 </div>
        </div>
   
     @* Decorative Elements *@
                <div class="hero-decoration">
   <span class="decoration-emoji">✈️</span>
        <span class="decoration-emoji">🚂</span>
     <span class="decoration-emoji">🚗</span>
         <span class="decoration-emoji">🌍</span>
  </div>
            </section>

    @* Features Section *@
            <section class="features-section">
                <h2 class="section-title">Everything You Need for Trip Planning</h2>
           
         <div class="features-grid">
             @* Feature 1 *@
      <div class="feature-card">
    <div class="feature-icon">🗺️</div>
  <h3 class="feature-title">Plan Trips</h3>
          <p class="feature-description">
        Create detailed trip plans with dates, destinations, and transport types. Keep everything organized in one place.
        </p>
                </div>
      
  @* Feature 2 *@
         <div class="feature-card">
    <div class="feature-icon">👥</div>
      <h3 class="feature-title">Manage Companions</h3>
       <p class="feature-description">
Add travel companions to your trips. Keep track of who's joining and their contact information.
       </p>
         </div>
        
     @* Feature 3 *@
           <div class="feature-card">
      <div class="feature-icon">📊</div>
              <h3 class="feature-title">Track History</h3>
                <p class="feature-description">
  View your upcoming and past trips. Build a timeline of your adventures and relive the memories.
           </p>
     </div>
     </div>
            </section>

   @* How It Works Section *@
            <section class="how-it-works-section">
      <h2 class="section-title">How It Works</h2>
             
 <div class="steps-container">
       @* Step 1 *@
  <div class="step-card">
     <div class="step-number">1</div>
        <h3 class="step-title">Create Account</h3>
<p class="step-description">
   Sign up in seconds with just your email. No credit card required.
        </p>
          </div>
             
      @* Step 2 *@
        <div class="step-card">
     <div class="step-number">2</div>
   <h3 class="step-title">Plan Your Trip</h3>
     <p class="step-description">
   Add trip details: name, dates, transport type, and description.
        </p>
       </div>
       
 @* Step 3 *@
  <div class="step-card">
           <div class="step-number">3</div>
      <h3 class="step-title">Invite Companions</h3>
            <p class="step-description">
          Add friends and family who'll join you on the adventure.
               </p>
      </div>
    </div>
            </section>

 @* CTA Bottom Section *@
   <section class="cta-bottom-section">
        <div class="cta-content">
          <h2 class="cta-title">Ready to Start Planning?</h2>
   <p class="cta-subtitle">
           Join thousands of travelers organizing their adventures with MotoNomad
            </p>
     <MudButton 
    Variant="Variant.Filled" 
      Size="Size.Large"
       Style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; font-weight: 600; border-radius: 12px; padding: 16px 48px; text-transform: none; box-shadow: 0 8px 24px rgba(102, 126, 234, 0.4);"
     Href="/register">
  Create Free Account
   </MudButton>
    </div>
     </section>

       @* Footer *@
       <footer class="home-footer">
         <p style="color: #718096;">
      © 2025 MotoNomad. Built with ❤️ for travelers.
          </p>
     </footer>
        </div>
    </NotAuthorized>
</AuthorizeView>

