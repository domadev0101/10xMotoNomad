@inherits LayoutComponentBase

<MudLayout>
    <MudAppBar 
        Elevation="0" 
        Dense="false"
        Style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); box-shadow: 0 4px 12px rgba(102, 126, 234, 0.25);">
        <MudIconButton 
            Icon="@Icons.Material.Filled.Menu" 
            Color="Color.Inherit" 
            Edge="Edge.Start" 
            OnClick="@ToggleDrawer" 
            Class="drawer-toggle"
            Style="color: white;" />
        
        <div @onclick="HandleLogoClick" style="cursor: pointer; display: flex; align-items: center; transition: opacity 0.3s ease;" class="appbar-logo">
            <MudText Typo="Typo.h5" Class="ml-3" Style="color: white; font-weight: 600;">
                🏍️ MotoNomad
            </MudText>
        </div>
        
        <MudSpacer />
        
        <LoginDisplay />
    </MudAppBar>

    <MudDrawer 
        @bind-Open="_drawerOpen" 
        Elevation="1" 
        Breakpoint="Breakpoint.Md"
        Variant="@(_drawerOpen ? DrawerVariant.Persistent : DrawerVariant.Temporary)">
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4 mb-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
