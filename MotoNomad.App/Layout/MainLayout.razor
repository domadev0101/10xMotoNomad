@inherits LayoutComponentBase

<MudLayout>
    <MudAppBar 
        Elevation="0" 
        Dense="false"
        Style="background: linear-gradient(135deg, #1a3a2e 0%, #2d5016 100%); box-shadow: 0 4px 12px rgba(26, 58, 46, 0.4);">
        <MudIconButton 
            Icon="@Icons.Material.Filled.Menu" 
            Color="Color.Inherit" 
            Edge="Edge.Start" 
            OnClick="@ToggleDrawer" 
            Class="drawer-toggle"
            Style="color: white;" />
        
        <div @onclick="HandleLogoClick" style="cursor: pointer; display: flex; align-items: center; gap: 12px; transition: opacity 0.3s ease;" class="appbar-logo">
            <img src="images/logo_1.png" alt="MotoNomad Logo" style="width: 40px; height: 40px; border-radius: 8px;" />
            <MudText Typo="Typo.h5" Class="ml-1" Style="color: white; font-weight: 600;">
                MotoNomad
            </MudText>
        </div>
        
        <MudSpacer />
        
        <LoginDisplay />
    </MudAppBar>

    <MudDrawer 
        @bind-Open="_drawerOpen" 
        Elevation="1" 
        Breakpoint="Breakpoint.Md"
        Variant="@(_drawerOpen ? DrawerVariant.Persistent : DrawerVariant.Temporary)">
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4 mb-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
