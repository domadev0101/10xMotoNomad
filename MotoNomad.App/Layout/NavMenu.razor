<div class="pa-4" style="background: #0f1a14; height: 100%;">
    @* Logo Section - Clickable *@
    <div 
        style="padding: 16px 0; margin-bottom: 24px; text-align: center; cursor: pointer;" 
        @onclick="HandleLogoClick">
        <div style="width: 80px; height: 80px; margin: 0 auto 12px; border-radius: 20px; overflow: hidden; box-shadow: 0 8px 24px rgba(26, 58, 46, 0.5); transition: all 0.3s ease; background: white;">
            <img src="images/logo_1.png" alt="MotoNomad Logo" style="width: 100%; height: 100%; object-fit: contain;" />
        </div>
        <MudText Typo="Typo.h6" Style="font-weight: 600; color: #e8f0ed; margin-bottom: 4px;">
  MotoNomad
        </MudText>
        <MudText Typo="Typo.caption" Style="color: #5a9367;">
            Plan your adventure
        </MudText>
    </div>
    
    <MudDivider Class="mb-4" Style="opacity: 0.3; background-color: #2d5016;" />
    
<MudNavMenu Style="padding: 0;">
        <AuthorizeView>
        <Authorized>
                <MudNavLink 
       Href="trips" 
    Icon="@Icons.Material.Filled.Map"
   Match="NavLinkMatch.All"
                    Class="nav-menu-link">
 My Trips
         </MudNavLink>
      
       <MudNavLink 
         Href="trip/create" 
       Icon="@Icons.Material.Filled.Add"
     Class="nav-menu-link">
        New Trip
           </MudNavLink>
 
                <MudNavLink 
    Href="profile" 
    Icon="@Icons.Material.Filled.Person"
   Class="nav-menu-link">
 My Profile
      </MudNavLink>
     
          <MudDivider Class="my-4" Style="opacity: 0.3; background-color: #2d5016;" />
             
        <MudNavLink 
          OnClick="@HandleLogout"
           Icon="@Icons.Material.Filled.Logout"
 Class="nav-menu-link nav-menu-logout">
          Logout
         </MudNavLink>
     </Authorized>
   
  <NotAuthorized>
         <MudNavLink 
           Href="login" 
   Icon="@Icons.Material.Filled.Login"
          Class="nav-menu-link">
          Login
    </MudNavLink>
      
                <MudNavLink 
             Href="register" 
        Icon="@Icons.Material.Filled.PersonAdd"
          Class="nav-menu-link">
     Register
          </MudNavLink>
            </NotAuthorized>
        </AuthorizeView>
  </MudNavMenu>
</div>
